{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container-wrap vh-100 d-flex align-items-center">
        <div class="container ">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-4 col-12 shadow-sm p-3 mb-5 bg-body rounded">
                    <h1 class="h3 mb-3 font-weight-normal">Register</h1>

                    {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(registrationForm.plainPassword, { label: 'Password', 'attr': {'class': 'form-control'} }) }}

                    <div class='d-flex mt-3'>
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(registrationForm.agreeTerms) }}
                    </div>

                    <button type="submit" class="btn btn-primary mt-3">Register</button>
                    {{ form_end(registrationForm) }}
                    <div class="form-text mt-3">Already have account? <a href="/login">Login</a> here.</div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

